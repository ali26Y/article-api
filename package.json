{
  "name": "article-api",
  "version": "0.1.0",
  "description": "api template for articles",
  "scripts": {
    "dev": "nodemon -e js --ignore test/*.js src/index.js",
    "test:coverage": "NODE_ENV=test tap src/tests/*.js --coverage-report=lcov",
    "test": "NODE_ENV=test tap src/tests/*.js",
    "start": "node src/index.js",
    "precommit": "semistandard --verbose | snazzy"
  },
  "author": "a.attayee12@gmail.com",
  "contributors": [
    {
      "name": "Ali Attayee",
      "email": "a.attayee12@gmail.com"
    }
  ],
  "license": "UNLICENSED",
  "semistandard": {
    "ignore": [
      "/coverage"
    ]
  },
  "dependencies": {
    "async": "2.1.5",
    "lodash": "^4.17.4",
    "moment": "^2.18.1",
    "node-emoji": "^1.5.1",
    "require-glob": "3.2.0",
    "restify": "4.3.0",
    "uuid": "^3.0.1"
  },
  "devDependencies": {
    "codeclimate-test-reporter": "0.4.1",
    "nodemon": "1.11.0",
    "semistandard": "^10.0.0",
    "snazzy": "^6.0.0",
    "supertest": "3.0.0",
    "tap": "10.2.0",
    "tap-colorize": "^1.2.0",
    "testdouble": "^1.11.2"
  },
  "engines": {
    "node": "7.6.0"
  }
}
